# ==========================================
# STAGE 1: Builder
# ==========================================
FROM node:20-alpine AS builder

WORKDIR /app

# Copiar archivos de dependencias desde el repo
COPY package.json pnpm-lock.yaml ./

# Instalar pnpm
RUN npm install -g pnpm

# Copiar c贸digo fuente completo (necesario para prisma)
COPY . ./

# Instalar TODAS las dependencias (incluyendo devDependencies para prisma y typescript)
ENV CI=true
RUN pnpm install --frozen-lockfile

# Generar Prisma Client
RUN pnpm prisma generate

# Compilar TypeScript
RUN pnpm run build

# ==========================================
# STAGE 2: Production
# ==========================================
FROM node:20-alpine AS production

WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm

# Copiar archivos de dependencias
COPY package.json pnpm-lock.yaml ./

# Instalar solo dependencias de producci贸n
ENV CI=true
RUN pnpm install --prod --frozen-lockfile

# Copiar c贸digo compilado desde builder
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/prisma ./prisma
COPY --from=builder /app/node_modules/.pnpm/@prisma+client* ./node_modules/.pnpm/

# Generar Prisma Client en producci贸n
RUN pnpm prisma generate

# Exponer puerto
EXPOSE 4040

# Comando de inicio
CMD ["node", "dist/src/main"]
